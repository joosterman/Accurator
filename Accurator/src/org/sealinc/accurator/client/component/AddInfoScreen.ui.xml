<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default" xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:HTMLPanel styleName="registerContent">
		<div class="row">
			<div class="col-md-11 col-md-offset-1">
				<h2 class="page-title">
					<ui:msg description="Create your Accurator Account">Create your Accurator Account</ui:msg>
				</h2>
			</div>
			<div class="col-md-6 col-md-offset-1">			
				<form class="form-horizontal">
					<div class="form-group">
						<label for="age" class="col-sm-2 control-label">
							<ui:msg description="Age">Age</ui:msg>
						</label>
						<div class="col-sm-2">
							<g:IntegerBox ui:field="intAge" stylePrimaryName="form-control">
							</g:IntegerBox>
						</div>
					</div>
					<div class="form-group">
						<label for="gender" class="col-sm-2 control-label">
							<ui:msg description="Gender">Gender</ui:msg>
						</label>
						<div class="col-sm-6">
							<label class="radio-inline">
								<g:RadioButton ui:field="chkGenderMale" name="genderRadio"/>
								<ui:msg description="Male">Male</ui:msg>
							</label>
							<label class="radio-inline">
								<g:RadioButton ui:field="chkGenderFemale" name="genderRadio"/>
								<ui:msg description="Female">Female</ui:msg>
							</label>
						</div>
					</div>
					<div class="form-group">
						<label for="country"  class="col-sm-2 control-label">
							<ui:msg description="lblCountry">Country</ui:msg>
						</label>
						<div class="col-sm-6">
						<g:ListBox ui:field="lbxCountry" stylePrimaryName="form-control">
						</g:ListBox>
						</div>
					</div>
					<div class="form-group">
						<label for="mailAddress" class="col-sm-2 control-label">
							<ui:msg description="Email address">Email</ui:msg>
						</label>
						<div class="col-sm-6">
							<g:TextBox ui:field="txtEMail" stylePrimaryName="form-control">
							</g:TextBox>
						</div>
					</div>
				</form>
			</div>
			<div class="col-md-3 col-md-offset-1">
				<g:FlowPanel ui:field="pnlInfoWell"></g:FlowPanel>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4 col-md-offset-1">
				<g:Button ui:field="btnAddInfo" stylePrimaryName="btn btn-primary">
					<ui:msg description="Add Info Button">Add Additional Info</ui:msg>
				</g:Button>
				<g:Button ui:field="btnSkip" stylePrimaryName="btn btn-link">
					<ui:msg description="Skip Button">or skip this step</ui:msg>
				</g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>