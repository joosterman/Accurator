<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default" xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<g:HTMLPanel styleName="registerContent">
		<div class="row">
			<div class="col-md-11 col-md-offset-1">
				<h2 class="page-title">
					<ui:msg description="Create your Accurator Account">Create your Accurator Account</ui:msg>
				</h2>
			</div>
			<div class="col-md-3 col-md-offset-1">			
				<form role="form">
					<div class="form-group">
						<label for="mailAddress">
							<ui:msg description="Email address">Email</ui:msg>
						</label>
						<g:TextBox ui:field="txtEMail"
							stylePrimaryName="form-control">
						</g:TextBox>
					</div>
				</form>
			</div>
			<div class="col-md-3 col-md-offset-1">
				<g:FlowPanel ui:field="pnlInfoWell"></g:FlowPanel>
			</div>
		</div>
		<div class="row">
			<div class="col-md-2 col-md-offset-1">
				<g:Button ui:field="btnAddInfo" stylePrimaryName="btn btn-primary">
					<ui:msg description="Register Button">Register</ui:msg>
				</g:Button>
				<g:Button ui:field="btnSkip" stylePrimaryName="btn btn-link">
					<ui:msg description="Skip Button">or skip this step</ui:msg>
				</g:Button>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>