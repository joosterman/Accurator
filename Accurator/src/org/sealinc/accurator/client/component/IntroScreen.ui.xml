<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default" xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:d="urn:import:com.google.gwt.dom.client" xmlns:acc="urn:import:org.sealinc.accurator.client.component">

	<g:HTMLPanel styleName="introContent">
		<div class="top">
			<div class="row introText">
				<div class="col-md-8 col-md-offset-2">
					<h2>
						<ui:msg description="Slogan">Accurate Art Annotations</ui:msg>
						<small>
							<ui:msg description="SubSlogan">Help us add information to the
								artworks
								of the Rijksmuseum Amsterdam.
							</ui:msg>

							<g:InlineHyperlink targetHistoryToken="Profile">
								<ui:msg description="linkTryIt">Give it a try!</ui:msg>
							</g:InlineHyperlink>
						</small>
					</h2>
					<g:Button ui:field="btnRegister" styleName="btn btn-default btn-transparant">
						<ui:msg description="Register">Sign up</ui:msg>
					</g:Button>

					<button class="btn btn-primary" data-toggle="modal"
						data-target="#modalRegister">Register</button>
					<button class="btn btn-primary" data-toggle="modal"
						data-target="#modalLogin">Log in</button>
				</div>
			</div>
			<div id="learn-more">
				<g:Label ui:field="lblLearnMore">Learn more v</g:Label>
			</div>
		</div>
		<div id="divider">
		</div>
		<div class="bottom">
		</div>


		<div class="row introFooter">
			<div class="col-md-2 col-md-offset-1">
				<a href="https://www.rijksmuseum.nl/">
					<img src="/images/RMA.png" alt="Logo of the Rijksmuseum Amsterdam"
						class="logos">
						<ui:attribute name="alt" description="Alt text RMA logo" />
					</img>
				</a>
			</div>
			<div class="col-md-2 col-md-offset-2">
			</div>
			<div class="col-md-1 col-md-offset-2">
				<a href="http://commit-nl.nl/">
					<img src="/images/COMMIT.png" alt="Logo of the COMMIT project"
						class="logos">
						<ui:attribute name="alt" description="Alt text COMMIT logo" />
					</img>
				</a>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
