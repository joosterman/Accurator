<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="default" xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:d="urn:import:com.google.gwt.dom.client" xmlns:acc="urn:import:org.sealinc.accurator.client.component">

	<g:HTMLPanel styleName="introContent">
		<!-- Top half intro page -->
		<div class="top">
			<!-- Background image -->
			<g:Image ui:field="imgBackground" stylePrimaryName="backgroundImage"></g:Image>
			<!-- Slogan, Register and Login buttons -->
			<div class="container introText ">
				<div class="row">
					<div class="col-md-8 col-md-offset-2">
						<h2>
							<ui:msg description="Slogan">Accurate Art Annotations</ui:msg>
							<small>
								<ui:msg description="SubSlogan">Help us add information to the
									artworks of the Rijksmuseum Amsterdam.
								</ui:msg>
								<g:InlineHyperlink targetHistoryToken="Profile">
									<ui:msg description="linkTryIt">Give it a try!</ui:msg>
								</g:InlineHyperlink>
							</small>
						</h2>
						<button class="button-overlay"
							data-toggle="modal" data-target="#modalRegister">Sign up</button>
						<button class="btn btn-link introLink" data-toggle="modal"
							data-target="#modalLogin">or Sign in</button>
					</div>
				</div>
			</div>
			<!-- Learn more (link to bottom) -->
			<div id="learn-more">
				<div id="learn-more-text">
					<h3><g:InlineLabel ui:field="lblLearnMore">
						Learn more&nbsp;</g:InlineLabel></h3>
					<g:InlineLabel stylePrimaryName="glyphicon glyphicon-chevron-down"></g:InlineLabel>
				</div>
			</div>
		</div>
		
		<div id="divider"></div>
		
		<!-- Bottom Half Intro Page -->
		<div class="bottom container">
			<div class="row">
				<div class="row col-md-4 col-md-offset-2">
					<h3  >About Accurator</h3>
					<p align="justify"> Accurator is platform that allows web users to help museum professionals with describing museum collection items specifically of the 
					Rijksmuseum, Amsterdam by providing expert knowledge. This could, for example, be the annotation of the depicted species 
					of an animal or a plant. Apart from contributing to very detailed descriptions of the collection items, this information can also be used to 
					facilitate searching through the museum's collection.</p>
				</div>
				<div class="row">
<!-- 				<a href="https://www.rijksmuseum.nl"> 
 -->				    <img src="/images/bird.png" alt="screenshot of video" height="200" width="300" align="centre" >
<!-- 				    </a>
 -->						<ui:attribute name="alt" description="Alt text video screenshot" />
					</img>
				
				</div>
				</div>
			<div class="row">
				<div class="row col-md-4 col-md-offset-2">
					<img src="/images/commit_sealinc.jpg" alt="Logo of SEALINCMedia project" class="logo">
						<ui:attribute name="alt" description="Alt text SEALINCMedia logo" />
					</img>
				</div>
				<div class="row col-md-4">
				    <h3>SEALINCMedia</h3>
					<p align="justify"> Accurator is designed as part of the SEALINCMedia project. The collaborating institutions are 
					Vrije University (VU) Amsterdam, Technical University Delft (TuD), Centrum Wiskunde &amp; Informatica (CWI), Rijksmuseum Amsterdam, Naturalis and the National Library of The Netherlands. SEALINCMedia is part of the COMMIT/ project which brings together academic research and (non-)profit organizations to solve challenges in ICT. 
					
				</p>
				</div>
			</div>
			<div class="row">
				<div class="row col-md-4 col-md-offset-2">
					<h3>Accurator for research</h3>
					<p align="justify">
					 The research challenges of the project are: to identify the niche of relevant experts and to motivate them to contribute to the 
					 annotation of artworks; developping the personalization mechanisms to make sure that the experts are shown items that correspond 
					 to their expertise; evaluating the quality of the annotations and annotators using trust algorithms and to present all these aspects 
					 in an appropriate interface. To test our hypotheses, we continuously develop and evaluate Accurator. 
				</p>
				</div>
				<div class="row col-md-4">
					<img src="/images/logo_partners.jpg" alt="Logo of SEALINCMedia project" class="logo">
						<ui:attribute name="alt" description="Alt text SEALINCMedia logo" />
					</img>
				    
				    
				    
				</div>
			</div>
